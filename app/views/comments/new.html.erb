<div class="container my--16">
  <div class="row">
    <div class="col-12">
      <h2 class="post__title">Add A New Comments</h2>
    </div>
    <div class="col-12">
      <%= form_with(model: [@post, @comment]) do |f| %>
        <div class="form-group">
          <%= f.label :Description %>
          <%= f.text_area :text, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Create Comments", class: "btn btn--primary", data: { disable_with: false }  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
