<div class="container my--16">
  <div class="row post p-16 my--16">
    <div class="col-6">
      <div class="post__title"><%= @post.title %> #<%= @post.id %> by <%= @post.author.name %> </div>
    </div>
    <div class="col-6">
      <div class="post__extra">Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></div>
    </div>
    <div class="col-12">
      <%= @post.text %>
    </div>
  </div>
</div>
