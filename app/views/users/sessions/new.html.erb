<div class="container my--16">
  <div class="row">
    <div class="col-12 p-16">
      <div class="form__container">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Username", class: 'w-100' %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: 'w-100' %>
          </div>
          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn--primary w-100" %>
          </div>
          <div class="form-group">
            <%= render "users/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
